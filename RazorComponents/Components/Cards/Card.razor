@namespace Majunga.Libraries.RazorComponents.Components.Cards

<div class="card @textAlignment" style="width: 18rem;" @attributes="AdditionalAttributes">
    @ChildContent
</div>

@code {
    private string textAlignment => TextAlign.Value();

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public TextAlignment TextAlign { get; set; } = TextAlignment.Left;

    [Parameter(CaptureUnmatchedValues = true)] public IReadOnlyDictionary<string, object> AdditionalAttributes { get; set; }

    protected override Task OnInitializedAsync()
    {

        return base.OnInitializedAsync();
    }
}
