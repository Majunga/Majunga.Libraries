@page "/gridStory"

@using Majunga.Libraries.RazorComponents.Components.Grid
@inject HttpClient Http

<Grid TModelItem="WeatherForecast" Data="@forecasts">
    <Columns>
        <GridColumn Title="Date"         Field="@nameof(WeatherForecast.Date)"         DisplayFormat="dd MMM yyyy"/>
        <GridColumn Title="TemperatureC" Field="@nameof(WeatherForecast.TemperatureC)" DisplayFormat="{0}°C" />
        <GridColumn Title="TemperatureF" Field="@nameof(WeatherForecast.TemperatureF)" DisplayFormat="{0}°F" />
        <GridColumn Title="Summary"      Field="@nameof(WeatherForecast.Summary)" />
    </Columns>
</Grid>


@code {
    private WeatherForecast[]? forecasts;


    protected override async Task OnInitializedAsync()
    {
        forecasts = await Http.GetFromJsonAsync<WeatherForecast[]>("sampledata/weather.json");
        await base.OnInitializedAsync();
    }


    public class WeatherForecast
    {
        public DateTime Date { get; set; }

        public int TemperatureC { get; set; }

        public string? Summary { get; set; }

        public int TemperatureF => 32 + (int)(TemperatureC / 0.5556);
    }
}
